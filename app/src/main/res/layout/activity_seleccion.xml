<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seleccion"
    android:background="@drawable/selec_per"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ivandario.prueba.Seleccion">


    <ImageButton
        android:id="@+id/shoe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:elevation="0dp"
        android:scaleX="0.3"
        android:scaleY="0.3"
        app:srcCompat="@drawable/shoe_1_button"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/shoe3" />

    <ImageButton
        android:id="@+id/shoe2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shoe1"
        android:layout_alignTop="@+id/shoe1"
        android:layout_marginTop="125dp"
        android:background="#00000000"
        android:padding="0dp"
        android:scaleX="0.3"
        android:scaleY="0.3"
        app:srcCompat="@drawable/shoe_2_button" />

    <ImageButton
        android:id="@+id/shoe3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:scaleX="0.3"
        android:scaleY="0.3"
        app:srcCompat="@drawable/shoe_3_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
